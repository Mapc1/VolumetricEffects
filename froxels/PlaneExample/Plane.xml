<?xml version="1.0" encoding="UTF-8"?>
<project name="Volumetric Effects - Froxels" width="1280" height="720">
    <assets>
        <attributes>
            <attribute type="STATE" name="CUBE_ANISOTROPY" data="FLOAT" value="0.7"/>
            <attribute type="STATE" name="CUBE_SCATTERING" data="VEC4" x="0.3" y="0.8" z="0.3" w="1.0"/>
            <attribute type="STATE" name="CUBE_ABSORPTION" data="FLOAT" value="0.1"/>
            <attribute type="STATE" name="CUBE_DENSITY" data="FLOAT" value="0.01"/>

            <attribute type="STATE" name="SPHERE_ANISOTROPY" data="FLOAT" value="0.1"/>
            <attribute type="STATE" name="SPHERE_SCATTERING" data="VEC4" x="0.01" y="0.01" z="0.01" w="1.0"/>
            <attribute type="STATE" name="SPHERE_ABSORPTION" data="FLOAT" value="0.8"/>
            <attribute type="STATE" name="SPHERE_DENSITY" data="FLOAT" value="0.02"/>

            <attribute type="STATE" name="HOMOGENEOUS_MEDIA" data="INT" value="0"/>
            <attribute type="LIGHT" name="LIGHT_INTENSITY" data="FLOAT" value="50"/>
            <attribute type="LIGHT" name="AMBIENT_LIGHT_STRENGTH" data="FLOAT" value="0.0"/>
            <attribute type="RENDERER" name="VOL_ACTIVE" data="INT" value="0"/>
            <attribute type="CAMERA" name="PREV_PROJ_VIEW_MAT" data="MAT4"/>
        </attributes>
        
        <scenes>
            <scene name="Plane">
                <geometry name="Plane" type="GRID" material="plane" LENGTH="1024" DIVISIONS="1"/>
            </scene>
            <scene name="SkyBox">
                <geometry name="Box" type="BOX" material="skyBox">
                    <SCALE x="1200" y="1200" z="1200"/>
                </geometry>
            </scene>
        </scenes>

        <viewports>
            <viewport name="MainViewport">
                <CLEAR_COLOR r="0.0" g="0.0" b="0.0"/>
            </viewport>
        </viewports>

        <cameras>
            <camera name="MainCamera">
                <viewport name="MainViewport"/>
                <projection TYPE="PERSPECTIVE" FOV="60.0" NEAR="1.0" FAR="2000.0"/>
                <POSITION x="-41" y="273" z="384"/>
                <LOOK_AT_POINT x="-41" y="272.740" z="383"/>
                <UP x="0.0" y="1.0" z="0.0"/>
            </camera>
        </cameras>

        <lights>
            <light name="Sun">
                <DIRECTION x="0.5" y="-0.7" z="0.4"/>
                <COLOR r="1.0" g="1.0" b="1.0"/>
            </light>
        </lights>

        <materialLibs>
            <materialLib filename="Froxels.mlib"/>
        </materialLibs>
    </assets>

    <pipelines>
        <pipeline name="volfx" defaultCamera="MainCamera">
            <pass class="depthmap" name="genShadowMap">
                <scenes>
                    <scene name="Plane"/>
                </scenes>
                <camera name="MainCamera"/>
                <lights>
                    <light name="Sun"/>
                </lights>
                <renderTarget name="shadowMap" fromLibrary="Froxels"/>
                <materialMaps>
                    <map fromMaterial="*" toLibrary="Froxels" toMaterial="shadowMap"/>
                </materialMaps>
            </pass>
            
            <pass class="compute" name="CalcScattering">
                <material name="calcScattering" fromLibrary="Froxels" dimX="160" dimY="90" dimZ="64"/>
            </pass>

            <pass class="compute" name="ScatIntegration">
                <material name="scatIntegration" fromLibrary="Froxels" dimX="160" dimY="90" dimZ="1"/>
            </pass>

            <pass class="default" name="Render">
                <scenes>
                    <scene name="Plane"/>
                    <scene name="SkyBox"/>
                </scenes>
                <camera name="MainCamera"/>
                <lights>
                    <light name="Sun"/>
                </lights>
                <postScript file="scripts/temporal_matrix_set.lua" script="tms"/>
                <injectionMaps>
                    <map toMaterial="*">
                        <shader fromMaterial="render" fromLibrary="Froxels" />
                        <textures>
                            <texture name="integrationTex" fromLibrary="Froxels" toUnit="2">
                                <WRAP_S value="CLAMP_TO_EDGE"/>
                                <WRAP_R value="CLAMP_TO_EDGE"/>
                                <WRAP_T value="CLAMP_TO_EDGE"/>
                                <MIN_FILTER value="LINEAR"/>
                                <MAG_FILTER value="LINEAR"/>
                            </texture>
                            <texture name="shadowMap" fromLibrary="Froxels" toUnit="1">
                                <COMPARE_MODE value="COMPARE_REF_TO_TEXTURE"/>
                                <COMPARE_FUNC value="LEQUAL"/>
                                <MIN_FILTER value="LINEAR"/>
                                <MAG_FILTER value="LINEAR"/>
                            </texture>
                        </textures>
                    </map>
                </injectionMaps>
                <materialMaps>
                    <map fromMaterial="skyBox" toLibrary="Froxels" toMaterial="skyBox"/>
                    <map fromMaterial="plane" toLibrary="Froxels" toMaterial="render"/>
                </materialMaps>
            </pass>
        </pipeline>
    </pipelines>

    <interface>
        <window label="settings">
            <var label="Ambient light" type="LIGHT" context="Sun" component="AMBIENT_LIGHT_STRENGTH" def="min=0 max=1"/>
            <var label="Volumetric effects" type="RENDERER" context="CURRENT" component="VOL_ACTIVE" strings="Active,Inactive"/>
        </window>
        <window label="Fog">
            <var label="Cube anisotropy" type="STATE" context="Froxels::calcScattering" component="CUBE_ANISOTROPY" def="min=0 max=0.999"/>
            <var label="Cube scattering" type="STATE" context="Froxels::calcScattering" component="CUBE_SCATTERING" def="min=0 max=1"/>
            <var label="Cube absorption" type="STATE" context="Froxels::calcScattering" component="CUBE_ABSORPTION" def="min=0.001 max=1"/>
            <var label="Cube density" type="STATE" context="Froxels::calcScattering" component="CUBE_DENSITY" def="min=0.001 max=0.1"/>

            <var label="Sphere anisotropy" type="STATE" context="Froxels::calcScattering" component="SPHERE_ANISOTROPY" def="min=0 max=0.999"/>
            <var label="Sphere scattering" type="STATE" context="Froxels::calcScattering" component="SPHERE_SCATTERING" def="min=0 max=1"/>
            <var label="Sphere absorption" type="STATE" context="Froxels::calcScattering" component="SPHERE_ABSORPTION" def="min=0.001 max=1"/>
            <var label="Sphere density" type="STATE" context="Froxels::calcScattering" component="SPHERE_DENSITY" def="min=0.001 max=0.1"/>
        </window>
        <window label="Directional light properties">
            <var label="Light direction" type="LIGHT" context="Sun" component="DIRECTION" def="min=-1 max=1"/>
            <var label="Light intensity" type="LIGHT" context="Sun" component="LIGHT_INTENSITY" def="min=0 max=100"/>
            <var label="Light color" type="LIGHT" context="Sun" component="COLOR" mode="COLOR"/>
            <var label="Enabled" type="LIGHT" context="Sun" component="ENABLED"/>
        </window>
    </interface>
</project>