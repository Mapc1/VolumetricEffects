<?xml version="1.0" encoding="UTF-8"?>
<project name="Volumetric Effects - Ray-marching" width="1280" height="720">
    <assets>
        <attributes>
            <attribute type="STATE" name="NUM_STEPS" data="INT" value="64"/>
            <attribute type="STATE" name="ANISOTROPY" data="FLOAT" value="0.2"/>
            <attribute type="STATE" name="SCATTERING" data="VEC4" x="0.9" y="0.9" z="0.9" w="1.0"/>
            <attribute type="STATE" name="ABSORPTION" data="FLOAT" value="0.1"/>
            <attribute type="STATE" name="DENSITY" data="FLOAT" value="0.0003"/>
            <attribute type="LIGHT" name="LIGHT_INTENSITY" data="FLOAT" value="1"/>
            <attribute type="LIGHT" name="AMBIENT_LIGHT_STRENGTH" data="FLOAT" value="0.0"/>
            <attribute type="RENDERER" name="VOL_ACTIVE" data="INT" value="0"/>
            <attribute type="RENDERER" name="GAMMA" data="FLOAT" value="2.2"/>
        </attributes>

        <scenes>
            <scene name="Sponza" filename="..\models\sponza\sponza.obj"/>
            <scene name="SkyBox">
                <geometry name="Box" type="BOX" material="skyBox">
                    <SCALE x="5000" y="5000" z="5000"/>
                </geometry>
            </scene>
        </scenes>

        <viewports>
            <viewport name="MainViewport">
                <CLEAR_COLOR r="0.0" g="0.0" b="0.0"/>
            </viewport>
        </viewports>

        <cameras>
            <camera name="MainCamera">
                <viewport name="MainViewport"/>
                <projection TYPE="PERSPECTIVE" FOV="60.0" NEAR="1.0" FAR="7000.0"/>
                <POSITION x="900" y="500" z="500"/>
                <LOOK_AT_POINT x="600" y="800" z="-400"/>
                <UP x="0.0" y="1.0" z="0.0"/>
            </camera>
        </cameras>

        <lights>
            <light name="Sun">
                <DIRECTION x="0.5" y="-0.7" z="0.4"/>
                <COLOR r="1.0" g="1.0" b="1.0"/>
            </light>
        </lights>

        <materialLibs>
            <materialLib filename="RayMarching.mlib"/>
        </materialLibs>
    </assets>

    <pipelines>
        <pipeline name="ray-marching" defaultCamera="MainCamera">
            <pass class="depthmap" name="genShadowMap">
                <scenes>
                    <scene name="Sponza"/>
                </scenes>
                <camera name="MainCamera"/>
                <lights>
                    <light name="Sun"/>
                </lights>
                <renderTarget name="shadowMap" fromLibrary="RayMarching"/>
                <materialMaps>
                    <map fromMaterial="*" toLibrary="RayMarching" toMaterial="shadowMap"/>
                </materialMaps>
            </pass>

            <pass class="default" name="gBuffer">
                <viewport name="MainViewport"/>
                <scenes>
                    <scene name="Sponza"/>
                    <scene name="SkyBox"/>
                </scenes>
                <camera name="MainCamera"/>
                <injectionMaps>
                    <map toMaterial="*">
                        <shader fromMaterial="gBuffer" fromLibrary="RayMarching" />
                    </map>
                </injectionMaps>
                <renderTarget name="gBuffer" fromLibrary="RayMarching"/>
            </pass>

            <pass class="quad" name="scatIntegration">
                <COLOR_CLEAR value="false" />
                <camera name="MainCamera"/>
                <viewport name="MainViewport"/>
                <material name="scatIntegration" fromLibrary="RayMarching"/>
                <renderTarget name="scatTrans" fromLibrary="RayMarching"/>
            </pass>

            <pass class="quad" name="render">
                <COLOR_CLEAR value="false" />
                <viewport name="MainViewport"/>
                <camera name="MainCamera"/>
                <material name="render" fromLibrary="RayMarching"/>
            </pass>
        </pipeline>

        <pipeline name="Scattering">
            <pass class="depthmap" name="genShadowMap">
                <scenes>
                    <scene name="Sponza"/>
                </scenes>
                <camera name="MainCamera"/>
                <lights>
                    <light name="Sun"/>
                </lights>
                <renderTarget name="shadowMap" fromLibrary="RayMarching"/>
                <materialMaps>
                    <map fromMaterial="*" toLibrary="RayMarching" toMaterial="shadowMap"/>
                </materialMaps>
            </pass>

            <pass class="default" name="gBuffer">
                <viewport name="MainViewport"/>
                <scenes>
                    <scene name="Sponza"/>
                    <scene name="SkyBox"/>
                </scenes>
                <camera name="MainCamera"/>
                <injectionMaps>
                    <map toMaterial="*">
                        <shader fromMaterial="gBuffer" fromLibrary="RayMarching" />
                    </map>
                </injectionMaps>
                <renderTarget name="gBuffer" fromLibrary="RayMarching"/>
            </pass>

            <pass class="quad" name="scatIntegration">
                <COLOR_CLEAR value="false" />
                <camera name="MainCamera"/>
                <viewport name="MainViewport"/>
                <material name="scatIntegration" fromLibrary="RayMarching"/>
            </pass>
        </pipeline>


        <pipeline name="Normals">
            <pass class="default" name="gBuffer">
                <viewport name="MainViewport"/>
                <scenes>
                    <scene name="Sponza"/>
                    <scene name="SkyBox"/>
                </scenes>
                <camera name="MainCamera"/>
                <injectionMaps>
                    <map toMaterial="*">
                        <shader fromMaterial="gBuffer" fromLibrary="RayMarching" />
                    </map>
                </injectionMaps>
                <renderTarget name="gBuffer" fromLibrary="RayMarching"/>
            </pass>

            <pass class="quad" name="normals">
                <COLOR_CLEAR value="false" />
                <viewport name="MainViewport"/>
                <material name="normals" fromLibrary="RayMarching"/>
            </pass>
        </pipeline>

        <pipeline name="Positions">
            <pass class="default" name="gBuffer">
                <viewport name="MainViewport"/>
                <scenes>
                    <scene name="Sponza"/>
                    <scene name="SkyBox"/>
                </scenes>
                <camera name="MainCamera"/>
                <injectionMaps>
                    <map toMaterial="*">
                        <shader fromMaterial="gBuffer" fromLibrary="RayMarching" />
                    </map>
                </injectionMaps>
                <renderTarget name="gBuffer" fromLibrary="RayMarching"/>
            </pass>

            <pass class="quad" name="positions">
                <COLOR_CLEAR value="false" />
                <viewport name="MainViewport"/>
                <material name="positions" fromLibrary="RayMarching"/>
            </pass>
        </pipeline>

        <pipeline name="Albedos">
            <pass class="default" name="gBuffer">
                <viewport name="MainViewport"/>
                <scenes>
                    <scene name="Sponza"/>
                    <scene name="SkyBox"/>
                </scenes>
                <camera name="MainCamera"/>
                <injectionMaps>
                    <map toMaterial="*">
                        <shader fromMaterial="gBuffer" fromLibrary="RayMarching" />
                    </map>
                </injectionMaps>
                <renderTarget name="gBuffer" fromLibrary="RayMarching"/>
            </pass>

            <pass class="quad" name="albedos">
                <COLOR_CLEAR value="false" />
                <viewport name="MainViewport"/>
                <material name="albedos" fromLibrary="RayMarching"/>
            </pass>
        </pipeline>

        <pipeline name="LinearDepth">
            <pass class="default" name="gBuffer">
                <viewport name="MainViewport"/>
                <scenes>
                    <scene name="Sponza"/>
                    <scene name="SkyBox"/>
                </scenes>
                <camera name="MainCamera"/>
                <injectionMaps>
                    <map toMaterial="*">
                        <shader fromMaterial="gBuffer" fromLibrary="RayMarching" />
                    </map>
                </injectionMaps>
                <renderTarget name="gBuffer" fromLibrary="RayMarching"/>
            </pass>

            <pass class="quad" name="linearDepth">
                <COLOR_CLEAR value="false" />
                <viewport name="MainViewport"/>
                <material name="linearDepth" fromLibrary="RayMarching"/>
            </pass>
        </pipeline>
    </pipelines>

    <interface>
        <window label="Settings" >
            <pipelineList label="Pipeline" />
            <var label="Ray-marching steps" type="STATE" context="RayMarching::scatIntegration" component="NUM_STEPS" def="min=1 max=5000"/>
            <var label="Anisotropy" type="STATE" context="RayMarching::scatIntegration" component="ANISOTROPY" def="min=0 max=0.999"/>
            <var label="Scattering" type="STATE" context="RayMarching::scatIntegration" component="SCATTERING" def="min=0 max=1"/>
            <var label="Absorption" type="STATE" context="RayMarching::scatIntegration" component="ABSORPTION" def="min=0.001 max=1"/>
            <var label="Density" type="STATE" context="RayMarching::scatIntegration" component="DENSITY" def="min=0.001 max=0.1"/>
            <var label="Light direction" type="LIGHT" context="Sun" component="DIRECTION" def="min=-1 max=1"/>
            <var label="Light intensity" type="LIGHT" context="Sun" component="LIGHT_INTENSITY" def="min=0 max=100"/>
            <var label="Ambient light" type="LIGHT" context="Sun" component="AMBIENT_LIGHT_STRENGTH" def="min=0 max=1"/>
            <var label="Volumetric effects" type="RENDERER" context="CURRENT" component="VOL_ACTIVE" strings="Active,Inactive"/>
            <var label="Gamma" type="RENDERER" context="CURRENT" component="GAMMA" def="min=0 max=4"/>
        </window>
    </interface>
</project>